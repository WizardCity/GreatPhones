<div id="itemsContainer">
  
  <h1>Order Details</h1>
  
  <table id="customers">
    
    <tr>
      <td>Order Date:</td>
      <td>Ordered By:</td>
      <td>Order Status:</td>
    </tr>
    <tr>
      <td><%= @order.order_date %></td>
      <td><%= @order.user %></td>
      <td><%= @order.status %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td>
        <%= link_to 'Edit', edit_order_path(@order) , :class => "button" , :role => "button" %>
        <%= link_to 'Back', orders_path , :class => "button" , :role => "button" %>
      </td>
    </tr>
    
  </table>
  
  <h2>Order Details</h2>
  
  <table id="customers">
    
    <% @orderitems.each do |orderitem| %>
    <tr>
      <td><%= orderitem.title %></td>
      <td>Qty Ordered <%= orderitem.quantity %></td>
    </tr>
    <% end %>
    
  </table>
  
  
</div>

